<Entity_Srv_RC xmlns="http://elite.com/schemas/transaction/process/write/Entity_Srv_RC">
    <Initialize xmlns="http://elite.com/schemas/transaction/object/write/Entity">
        <Add>
            <EntityPerson>
                <Attributes>
                    <EntityType>@EntityType</EntityType>
                    <LoadSource>Kentico</LoadSource>
                    <IsMerged>0</IsMerged>
                    <FirstName>@FirstName</FirstName>
                    <LastName>@LastName</LastName>
                    <NameFormat>150</NameFormat>
                </Attributes>
                <Children>
                    <Relate>
                        <Add>
                            <Relate>
                                <Attributes>
                                    <RelType>SELF</RelType>
                                    <Description>SELF</Description>
									<IsDefault>1</IsDefault>
                                </Attributes>
                                <Children>
                                    <Site>
                                        <Add>
                                            <Site>
                                                <Attributes>
                                                    <Description>@Description</Description>
                                                    <SiteType>@SiteType</SiteType>
                                                    <IsDefault>1</IsDefault>
													<Street>@Street</Street>
                                                    <Language>1033</Language>
                                                </Attributes>
                                            </Site>
                                        </Add>
                                    </Site>
                                </Children>
                            </Relate>
                        </Add>
                    </Relate>
                </Children>
            </EntityPerson>
        </Add>
    </Initialize>
</Entity_Srv_RC>