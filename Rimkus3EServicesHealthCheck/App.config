<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
  <appSettings>
    <add key="sql_commandtimeout" value="6000" />
    <!--Valid Values (3e_server): DEV,UAT,PROD-->
    <add key="3e_server" value="uat" />
    <add key="mattersrv_add" value="true" />
    <add key="posrv_add" value="true" />
    <add key="timekeepersrv_add" value="true" />
    <add key="nxusersrv_add" value="true" />
  </appSettings>
<log4net debug="true">
		<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="Rimkus3EServicesHealthCheck.log" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="5MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%-5p %d %-22.22c{1}:%-30.30M{1} - %m%n" />
			</layout>
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="RollingLogFileAppender" />
		</root>
		<logger additivity="false" name="TraceLogger">
			<level value="DEBUG" />
			<appender-ref ref="TraceLogger" />
		</logger>
	</log4net>
</configuration>